# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Database Configuration (PgBouncer on EC2)
# IMPORTANT: Use PgBouncer port 6432, NOT PostgreSQL direct port 5432
DB_HOST=127.0.0.1
DB_PORT=6432
DB_NAME=summit
DB_USER=summit_user
DB_PASSWORD=your_secure_password_here

# JWT Secret (MUST be changed in production)
JWT_SECRET=your_secure_random_jwt_secret_here

# CORS Configuration (NO localhost in production)
# Comma-separated list of allowed origins
CORS_ORIGIN=https://summit.codingeverest.com,https://www.codingeverest.com

# LiveKit Configuration
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_URL=ws://localhost:7880

# Email Configuration (Optional - not needed for registration anymore)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# EMAIL_FROM=noreply@codingeverest.com
