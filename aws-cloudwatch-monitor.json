{
  "Comment": "CloudWatch Alarm Configuration for Summit Site Monitoring",
  "Alarms": [
    {
      "AlarmName": "summit-site-ssl-certificate",
      "AlarmDescription": "Alert when SSL certificate for summit.codingeverest.com is invalid",
      "MetricName": "SSL_Certificate_Valid",
      "Namespace": "Summit/Health",
      "Statistic": "Average",
      "Period": 300,
      "EvaluationPeriods": 1,
      "Threshold": 1,
      "ComparisonOperator": "LessThanThreshold",
      "AlarmActions": [
        "arn:aws:sns:REGION:ACCOUNT_ID:summit-alerts"
      ],
      "OKActions": [
        "arn:aws:sns:REGION:ACCOUNT_ID:summit-alerts"
      ]
    },
    {
      "AlarmName": "summit-site-availability",
      "AlarmDescription": "Alert when summit.codingeverest.com is not accessible",
      "MetricName": "Site_Available",
      "Namespace": "Summit/Health",
      "Statistic": "Average",
      "Period": 300,
      "EvaluationPeriods": 2,
      "Threshold": 1,
      "ComparisonOperator": "LessThanThreshold",
      "AlarmActions": [
        "arn:aws:sns:REGION:ACCOUNT_ID:summit-alerts"
      ]
    },
    {
      "AlarmName": "summit-api-availability",
      "AlarmDescription": "Alert when summit-api.codingeverest.com is not accessible",
      "MetricName": "API_Available",
      "Namespace": "Summit/Health",
      "Statistic": "Average",
      "Period": 300,
      "EvaluationPeriods": 2,
      "Threshold": 1,
      "ComparisonOperator": "LessThanThreshold",
      "AlarmActions": [
        "arn:aws:sns:REGION:ACCOUNT_ID:summit-alerts"
      ]
    }
  ]
}

