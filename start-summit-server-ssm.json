{
  "commands": [
    "cd /var/www/summit/server",
    "pm2 stop summit 2>/dev/null || true",
    "pm2 delete summit 2>/dev/null || true",
    "pm2 start dist/index.js --name summit --update-env",
    "pm2 save",
    "sleep 3",
    "pm2 list",
    "curl -s http://localhost:4000/health || echo 'Health check failed'",
    "curl -s http://localhost:4000/api/summit/status || echo 'Summit API check failed'"
  ]
}

