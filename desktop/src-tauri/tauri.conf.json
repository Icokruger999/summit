{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Summit",
  "version": "0.1.0",
  "identifier": "com.codingeverest.summit",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Summit",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Productivity",
    "shortDescription": "Professional communication platform",
    "longDescription": "Summit - Professional video conferencing and chat application by Coding Everest"
  },
  "plugins": {
    "notification": {
      "all": true
    },
    "http": {
      "all": true,
      "request": true
    }
  }
}
